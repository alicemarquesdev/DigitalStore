<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <!-- Declaração do tipo de codificação e do idioma da página -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" /> <!-- Responsividade: ajusta a escala da página para dispositivos móveis -->
    <!-- Título da página, que pode ser definido nas views específicas -->
    <title>@ViewData["Title"]</title>

    <!-- Inclusão de arquivos CSS externos para o layout e funcionalidade -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" /> <!-- Bootstrap para o design responsivo -->
    <link rel="stylesheet" href="~/css-bootstrap/styles.css" asp-append-version="true" />    <!-- Estilos personalizados específicos do projeto -->
</head>

<body>
    <!-- Cabeçalho da página, que contém a barra de navegação -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container px-lg-5">
                <!-- Logo e link da página inicial -->
                <a class="navbar-brand fw-bold fs-4 ps-1" asp-controller="Home" asp-action="Index">DigitalStore</a>
            </div>
        </nav>
    </header>

    <!-- Conteúdo principal da página -->
        <main class="container-fluid m-0 pb-5" role="main">
            <!-- Exibição de mensagens de sucesso ou erro (TempData) -->
            @if (TempData["Alerta"] != null)
            {
                <div class="alert alert-dark mx-5 d-flex justify-content-between align-items-center" role="alert">
                    <span>@(TempData["Alerta"])</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Aqui é onde o conteúdo específico de cada página (views) será renderizado -->
            @RenderBody()
        </main>

    <!-- Rodapé da página, com informações institucionais e de contato -->
    <footer class="bg-dark text-white py-5">
        <div class="container">
            <div class="row">
                <!-- Coluna 1: Sobre a empresa -->
                <div class="col-md-4 mb-3">
                    <h6 class="text-uppercase">Sobre nós</h6>
                    <p class="small">
                        A Digital Store oferece uma ampla variedade de eletrônicos de alta qualidade com entrega rápida e suporte excepcional.
                        Nossa missão é fornecer os melhores produtos com a melhor experiência de compra online.
                    </p>
                </div>

                <!-- Coluna 2: Links úteis -->
                <div class="col-md-4 mb-3">
                    <h6 class="text-uppercase">Links úteis</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none">Política de Privacidade</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Termos de Serviço</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Política de Devoluções</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Ajuda & Suporte</a></li>
                    </ul>
                </div>

                <!-- Coluna 3: Informações de contato -->
                <div class="col-md-4 mb-3">
                    <h6 class="text-uppercase">Contato</h6>
                    <ul class="list-unstyled">
                        <li><strong>Telefone:</strong> (81) 4002-1234</li>
                        <li><strong>E-mail:</strong> <a href="mailto:suporte@digitalstore.com" class="text-white text-decoration-none">suporte@digitalstore.com</a></li>
                        <li><strong>WhatsApp:</strong> <a href="https://wa.me/5511999998888" target="_blank" class="text-white text-decoration-none">(11) 99999-8888</a></li>
                    </ul>
                </div>
            </div>

            <!-- Linha de separação entre as informações -->
            <hr class="my-1" />

            <!-- Rodapé final com direitos autorais -->
            <div class="text-center">
                <p class="small mb-0">&copy; 2024 Digital Store. Todos os direitos reservados.</p>
            </div>
        </div>
    </footer>

    <!-- Inclusão de scripts JS essenciais -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script> <!-- Bootstrap Bundle (Bootstrap + Popper.js) -->
    <!-- Scripts para validação de formulários -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script> <!-- Validação de formulários com jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script> <!-- Validação unobtrusive (integrada ao MVC) -->
    <!-- Renderização de scripts adicionais de páginas específicas -->
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
